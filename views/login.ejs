<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Login Page</title>
    <style>
      Body {
        font-family: Calibri, Helvetica, sans-serif;
        background-color: pink;
      }
      button {
        background-color: #4caf50;
        width: 100%;
        color: orange;
        padding: 15px;
        margin: 10px 0px;
        border: none;
        cursor: pointer;
      }
      form {
        border: 3px solid #f1f1f1;
      }
      input[type="text"],
      input[type="password"] {
        width: 100%;
        margin: 8px 0;
        padding: 12px 20px;
        display: inline-block;
        border: 2px solid green;
        box-sizing: border-box;
      }
      button:hover {
        opacity: 0.7;
      }
      .cancelbtn {
        width: auto;
        padding: 10px 18px;
        margin: 10px 5px;
      }

      .container {
        padding: 25px;
        background-color: lightblue;
      }
      .redirection-links a {
        text-decoration: none;
        color: blueviolet;
        font-size: 22px;
      }
      .redirection-links a:hover {
        cursor: pointer;
      }
    </style>
  </head>
  <body>
    <center><h1>Login Form</h1></center>
    <form action="/login" method="POST">
      <div class="container">
        <label for="loginId">Email or Username : </label>
        <input
          type="text"
          placeholder="Enter Email or Username"
          name="loginId"
          required
        />
        <label for="password">Password : </label>
        <input
          type="password"
          placeholder="Enter Password"
          name="password"
          required
        />
        <button type="submit">Login</button>
      </div>
      <div class="redirection-links">
        <a href="/registration">Register</a> <br />
        <a href="#" onclick="{ResetPassword()}">Forgot Password</a> <br />
        <a href="#" onclick="{ResendVerification()}"
          >Resend Verification Mail</a
        >
        <br />
      </div>
    </form>
  </body>
  <script>
    function ResendVerification() {
      const email = prompt("Please enter your email:");

      if (email !== null) {
        // Create a new form element
        const form = document.createElement("form");
        form.method = "POST";
        form.action = "/resend-verification";

        // Create an input field for the email and add it to the form
        const input = document.createElement("input");
        input.type = "hidden"; // Hidden input
        input.name = "email"; // Name attribute for the input
        input.value = email; // Value of the input
        form.appendChild(input);

        // Append the form to the document and submit it
        document.body.appendChild(form);
        form.submit();
      }
    }

    function ResetPassword() {
      const loginId = prompt("Please enter your email or username:");

      if (loginId !== null) {
        // Create a new form element
        const form = document.createElement("form");
        form.method = "POST";
        form.action = "/forgot-password";

        // Create an input field for the email/username and add it to the form
        const input = document.createElement("input");
        input.type = "hidden"; // Hidden input
        input.name = "loginId"; // Name attribute for the input
        input.value = loginId; // Value of the input
        form.appendChild(input);

        // Append the form to the document and submit it
        document.body.appendChild(form);
        form.submit();
      }
    }
  </script>
</html>
